{
  "compilerOptions": {
    "target": "ESNext",
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "types": ["node", "jest"],
    "typeRoots": ["node_modules/@types"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "lib": ["dom", "dom.iterable", "esnext"],
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "incremental": true
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jest-environment-jsdom"
  },
  "include": [
    "Components/**/*.tsx",
    "src",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "pages",
    "Components",
    "Components/mocks",
    "__tests__/components/Pagination.test.tsx",
    "__tests__/components/SearchBar.test.tsx",
    "__tests__/components/SearchResult.test.tsx",
    "__tests__/components/Detail.test.tsx",
    "__tests__/components/SearchApp.test.tsx",
    "__tests__/api/request.test.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ],
  "exclude": ["node_modules"]
}
